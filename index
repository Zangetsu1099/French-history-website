  <!-- ===== JS (Updated & Optimized) ===== -->
  <script>
  /* LANGUAGE TOGGLE */
  (function () {
    const btn = document.getElementById('lang-toggle');
    let currentLang = localStorage.getItem('site-lang') || 'en';

    function applyLang(lang) {
      document.querySelectorAll('[data-en]').forEach(el => {
        const txt = el.getAttribute(`data-${lang}`);
        if (txt !== null) el.textContent = txt;
      });
      btn.textContent = lang === 'en' ? 'ðŸ‡¬ðŸ‡§ English' : 'ðŸ‡«ðŸ‡· FranÃ§ais';
      localStorage.setItem('site-lang', lang);
      currentLang = lang;
    }

    if (btn) {
      btn.addEventListener('click', () => applyLang(currentLang === 'en' ? 'fr' : 'en'));
      applyLang(currentLang);
    }
  })();

  /* HERO PARALLAX */
  (function () {
    const hero = document.querySelector('.hero.parallax');
    if (!hero) return;

    hero.style.backgroundImage = "url('https://images.unsplash.com/photo-1502602898657-3e91760cbb34?auto=format&fit=crop&w=1400&q=80')";

    let ticking = false;
    function onScroll() {
      if (window.innerWidth <= 768) {
        hero.style.backgroundPosition = '';
        return;
      }
      if (!ticking) {
        window.requestAnimationFrame(() => {
          const y = window.pageYOffset;
          hero.style.backgroundPosition = `center ${y * 0.4}px`;
          ticking = false;
        });
        ticking = true;
      }
    }
    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();
  })();

  /* SLIDER DUPLICATION (SAFE) */
  (function () {
    const track = document.getElementById('sliderTrack');
    const wrapper = document.querySelector('.slider-wrapper');
    if (!track || !wrapper) return;

    const slides = Array.from(track.children);
    const images = track.querySelectorAll('img');

    const imagePromises = Array.from(images).map(img => {
      return new Promise(resolve => {
        if (img.complete) return resolve();
        img.addEventListener('load', resolve);
        img.addEventListener('error', resolve);
      });
    });

    Promise.all(imagePromises).then(() => {
      if (track.dataset.cloned !== 'true') {
        slides.forEach(sl => {
          const clone = sl.cloneNode(true);
          clone.classList.add('clone');
          track.appendChild(clone);
        });
        track.dataset.cloned = 'true';
      }
    });
  })();

  /* HIDE BROKEN IMAGES */
  (function () {
    document.querySelectorAll('img').forEach(img => {
      img.addEventListener('error', () => {
        img.style.background = 'linear-gradient(180deg,#e5dfd4,#f3eee4)';
        img.style.objectFit = 'cover';
      });
    });
  })();
  // Animate timeline heading when it enters the screen
(function () {
  const heading = document.querySelector(".timeline-slider h1");

  function checkVisibility() {
    const rect = heading.getBoundingClientRect();
    if (rect.top < window.innerHeight - 100) {
      heading.classList.add("visible");
    } else {
      heading.classList.remove("visible"); // allow repeat
    }
  }

  window.addEventListener("scroll", checkVisibility);
})();

// Looping scroll animation for topic list items
(function () {
  const items = document.querySelectorAll(".cont li");

  function animateTopics() {
    items.forEach((item, index) => {
      const rect = item.getBoundingClientRect();
      if (rect.top < window.innerHeight - 80) {
        // fade in
        item.classList.add("visible");
        item.style.transitionDelay = `${index * 0.12}s`; // stagger
      } else {
        // fade out (allows replay)
        item.classList.remove("visible");
      }
    });
  }

  window.addEventListener("scroll", animateTopics);
  animateTopics();
})();



  </script>


